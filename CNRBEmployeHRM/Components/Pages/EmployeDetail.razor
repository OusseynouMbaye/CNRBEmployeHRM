@page "/employeeDetail/{EmployeeId:int}"


<section>
    <h1 class="page-title">
        Details for @Employee.FirstName @Employee.LastName

    </h1>
    <div class="row">
        <div class="col-md-4">
            <img src="@($"https://gillcleerenpluralsight.blob.core.windows.net/person/{Employee.EmployeeId}.jpg")" class=" img-fluid rounded-circle employee-details-img" />
        </div>
        <div class="col-md-8">
            <h3>@Employee.FirstName @Employee.LastName</h3>
             <p>@Employee.Designation</p>
             <p>@Employee.Address</p>
             <p>@Employee.Email</p>
             <p>@Employee.PhoneNumber</p>
        </div>
    </div>
</section>

